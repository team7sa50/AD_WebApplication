@using Team7_StationeryStore.Models;
@model SharedViewModel;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/sharedlayout.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
</head>
<body>
    <div>
        <header>
            <ul>
                <li class="logo">Logic <span>Stationery</span></li>
                <li> <button class="openbtn" onclick="openNav()"><i class="fas fa-bars" id="sidebar_btn"></i> Menu</button></li>
                <li><p class="userdetails">Employee Name</p></li>
                <script src="~/js/site.js"></script>
            </ul>
        </header>

        <!-- Sidebar Area-->
        <div id="mySidebar" class="sidebar" onclick="closeNav()">
            <a href="#" class="closebtn">x</a>
            <a href="@Url.Action("Index", "StationeryStore")"><i class="fas fa-desktop"><span>  Home</span></i></a>
            <a href="@Url.Action("ViewInventory", "StationeryStore")"><i class="fas fa-cogs"><span>  Inventory</span></i></a>
            <a href="@Url.Action("ViewRequisitions", "Requisition")"><i class="fas fa-table"><span>  Requisition</span></i></a>
            <a href="#"><i class="fas fa-info-circle"><span>  Reports</span></i></a>
            <button href="#" class="logout_btn">Logout</button>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function openNav() {
  document.getElementById("mySidebar").style.width = "200px";
  document.getElementById("main").style.marginLeft = "200px";
}

function closeNav() {
    console.log("closing nav...")
  document.getElementById("mySidebar").style.width = "0";
  document.getElementById("main").style.marginLeft= "0";
}
    </script>
</body>
</html>