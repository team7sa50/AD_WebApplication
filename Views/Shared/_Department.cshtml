
@{
    ViewData["Title"] = "_Department";
    var user = (Employee)ViewData["user"];

}

<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            Close &times;
        </button>
        @if (user.Role == Role.STORE_MANAGER || user.Role == Role.STORE_SUPERVISOR)
        {
            <a href="@Url.Action("ViewInventory", "StationeryStore")" class="w3-bar-item w3-button"> View Inventories</a>
            <a href="@Url.Action("ViewRequisitions", "Requisitions")" class="w3-bar-item w3-button">View Requisitions</a>
            <a href="@Url.Action("ViewAllPurchaseOrders", "PurchaseOrder")" class="w3-bar-item w3-button">View Purchase Order</a>
        }
    </div>

    <div id="main">
        <div class="w3-teal">
            <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
            <div class="w3-container">
                <h1>Hello @user.Name</h1>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    @RenderSection("scripts", required: false)
    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "25%";
            document.getElementById("mySidebar").style.width = "25%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

</body>
</html>
