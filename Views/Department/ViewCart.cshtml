@{
    ViewData["Title"] = "ViewCart";
    var lists = (List<EmployeeCart>)ViewData["employeeCarts"];
    var username = ViewData["username"];
    var userid = ViewData["userid"];
    Employee emp = (Employee)ViewData["user"];
}
@if (emp.Role == Role.EMPLOYEE)
{
    Layout = "~/Views/Shared/_departmentemployeehome.cshtml";
}
@if (emp.Role == Role.DEPT_REP)
{
    Layout = "~/Views/Shared/_departmentrepresentativehome.cshtml";
}
<head>
    <title></title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>


<h2 style="text-align:center">Your Cart</h2>

<div class="container">
    <div>

        
    </div>
    <div align=center>
        <div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Item Code</th>
                        <th>Descripion</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var i in lists)
                    {
                        <tr>

                            <td class="text-center">@i.Inventory.itemCode</td>
                            <td class="text-left">@i.Inventory.description</td>
                            <td class="text-right">@i.Qty</td>
                            <td>
                                <form method="POST">
                                    <button value="Add To Cart" formaction="/Department/RemoveItem/?userid=@userid&&itemId=@i.InventoryId" class="btn btn-secondary">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>



            </table>
            <div class="text-center">
                <a class="btn btn-primary" asp-controller="Department" asp-action="RaiseRequisition">Submit Requisition</a>
                <a class="btn btn-primary" asp-controller="Department" asp-action="RemoveAllItems">Cancel</a>



            </div>
        </div>
    </div>
</div>











