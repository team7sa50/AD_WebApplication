@model Team7_StationeryStore.Models.CollectionPoint
@{
    ViewData["Title"] = "editDepartmentDetail";
    var username = ViewData["username"];
    var department = (Departments)ViewData["department"];
}

@{
    Layout = "~/Views/Shared/_departmentrepresentativehome.cshtml";
}

<head>
    <title></title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <style>
        input[type=button], input[type=submit], input[type=reset] {
            background-color: #24a0ed;
            border: none;
            color: white;
            padding: 10px 25px;
            text-decoration: none;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>

</head>


<h2 style="text-align:center;padding-top:30px">DEPARTMENT</h2>

<div class="container">

    <div align=center>
        <div>
            @using (Html.BeginForm("submit", "Department", FormMethod.Post))
            {
                <table class="table table-bordered table-striped">


                    <tr>
                        <td class="text-center">Department Code</td>
                        <td class="text-center">
                            <input type="text" value="@department.DeptCode" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">Department Name</td>
                        <td class="text-center">
                            <input type="text" value="@department.DeptName" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">Contact Name</td>
                        <td class="text-center">
                            <input type="text" value="@department.ContactName" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">Telephone Number</td>
                        <td class="text-center">
                            <input type="text" value="@department.PhoneNumber" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">Fax Number</td>
                        <td class="text-center">
                            <input type="text" value="@department.FaxNumber" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">Department Head</td>
                        <td class="text-center">
                            <input type="text" value="@department.DeptHead" readonly style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>

                    <tr>
                        <td class="text-center">@Html.LabelFor(x => x.Location)</td>
                        <td class="text-center">
                            <input type="text" name="Location" id="collectionlocation" style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>

                    <tr>
                        <td class="text-center">@Html.LabelFor(x => x.Time)</td>
                        <td class="text-center">
                            <input type="text" name="Time" id="collectiontime" style="border: 4px solid #307ec8;border-radius:5px;"/>
                        </td>
                    </tr>


                    <tr>
                        <td></td>
                        <td class="text-center"><input type="Submit" value="submit" id="submit" /></td>
                    </tr>



                </table>


            }
        </div>
    </div>
</div>






