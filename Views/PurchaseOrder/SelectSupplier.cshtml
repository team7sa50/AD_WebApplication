
@{
    ViewData["Title"] = "SelectSupplier";
    var suppliers = (List<Supplier>)ViewData["suppliers"];
    var username = ViewData["username"];
    var userid = ViewData["userid"];

}

    <head>
        <link href="~/css/selectsupplier.css" rel="stylesheet" />
        <title>Make Purchase Order</title>
        <script src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
        <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    </head>
<body>
    <div id="main">
        <div id="selectForm">
            <p style="display: inline-block; color: #f7b733;"><i class="fas fa-dolly-flatbed"></i></p>
            <p style="display: inline-block;" id="title">Select a supplier</p>
            <form asp-controller="PurchaseOrder" asp-action="PurchaseOrder" method="POST">
                <select name="supplier" id="suppliers">
                    @foreach (var c in suppliers)
                    {
                        <option value="@c.Id"> @c.name</option>

                    }
                </select>
                <button id="submitBtn" type="submit"><i class="fas fa-arrow-right"></i></button>
            </form>
        </div>
    </div>
</body>
