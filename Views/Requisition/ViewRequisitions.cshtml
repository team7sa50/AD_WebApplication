                    <form asp-controller="StationeryStore" asp-action="viewRetrieval" method="POST">

                        <table class="requisitiontable table" id="dt-multi-checkbox" cellspacing="0" width="100%">
                            <tr>
                                <th>Checkbox</th>
                                <th>Id</th>
