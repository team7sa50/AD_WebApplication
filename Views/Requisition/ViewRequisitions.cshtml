                                <td>
                                    <a onclick="openDetail('@c.Id','@c.Department.DeptCode')" class="viewDeta"><u>View</u></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (user.Role == Role.STORE_CLERK)
                {
                    <input id="genretrieval" type="submit" value="Generate Retrieval List" style="font-size:11px" />
                }
