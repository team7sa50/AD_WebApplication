                                <th>Details</th>
                            </tr>
                            @foreach (var c in lists)
                            {
                                <tr>
                                    <td><input type=checkbox value="@c.Id" name="req"></td>
                                    <td>@c.Id</td>
                                    <td>@c.DateSubmitted</td>
                                    <td>@c.status</td>
                                    <td>
                                        <a onclick="openDetail('@c.Id','@c.Department.DeptCode')"><u>View</u></a>
                                    </td>
